
.person-img{
	position: absolute;
	top: 130rpx;
	left: 3%;
	width: 94%;
}
.person-img > .person-top,
.person-img > .person-botton{
	width: 94%;
	margin: 5% auto;
	background-color: #fff;
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	overflow: hidden;
	padding: 2% 2% 0 2%;
	-webkit-box-shadow: 0 0 20rpx #ddd;
	        box-shadow: 0 0 20rpx #ddd;
}
.person-img-left{
	width: 35%;
	height: 100%;
	padding: 5%;
	float: left;
}
.person-img-right {
	width: 65%;
	height: 100%;
	padding: 5%;
	float: right;
	/* text-align: center; */
	font-size: 35rpx;
	padding-top: 10%;
	padding-left: 5%;
}
.feedback{
	width: 90%;
	height: 110rpx;
	/* border-bottom: 1rpx solid #F3F4F6; */
	padding-left: 3%;
	padding-top: 2%;
}
.button {
 width: 100%;
 background: white;
 border: none;
 text-align: left;
 padding: 7px 10px;
 margin: 0px;
 line-height: 1.6;
 -webkit-border-radius: 0;
         border-radius: 0;
 font-size: 32rpx;
 color: #323233;
}
.button::after {
 border: none;
 -webkit-border-radius: 0;
         border-radius: 0;
}


